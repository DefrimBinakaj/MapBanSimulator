<Window x:Class="MapBanSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapBanSimulator"
        mc:Ignorable="d"
        Title="Color Ban Game" Height="800" Width="700">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Name="BanPageTitle"
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            Margin="10"/>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Focusable="False">

            <ListBox 
                Name="MapBox" 
                Width="65" 
                Height="200" 
                SelectionMode="Multiple"/>

            <Button 
                Name="ProceedButton" 
                Content="Proceed" 
                Click="ProceedButton_Click" VerticalAlignment="Bottom"/>

        </StackPanel>

        <Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform">
            <Canvas Grid.Row="1" Width="200" Height="200">

                <Rectangle Canvas.Left="85" Canvas.Top="20" Width="30" Height="30" Fill="DimGray"/>

                <Rectangle Canvas.Left="35" Canvas.Top="55" Width="30" Height="30" Fill="DimGray"/>

                <Rectangle Canvas.Left="135" Canvas.Top="55" Width="30" Height="30" Fill="DimGray"/>

                <Rectangle Canvas.Left="20" Canvas.Top="110" Width="30" Height="30" Fill="DimGray"/>

                <Rectangle Canvas.Left="150" Canvas.Top="110" Width="30" Height="30" Fill="DimGray"/>

                <Rectangle Canvas.Left="60" Canvas.Top="155" Width="30" Height="30" Fill="DimGray"/>

                <Rectangle Canvas.Left="110" Canvas.Top="155" Width="30" Height="30" Fill="DimGray"/>

            </Canvas>
        </Viewbox>




    </Grid>


</Window>
