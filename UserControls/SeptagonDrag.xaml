<UserControl x:Class="MapBanSimulator.UserControls.SeptagonDrag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapBanSimulator.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid>
        <Canvas x:Name="canvas">
            <!-- The septagon and dot will be added here programmatically. -->
        </Canvas>
        <Image
            MouseLeftButtonDown="refreshDotsButton"
            Source="/MapBanSimulator;component/Images/reset_icon_purple.png"
            Width="30"
            Height="25"/>
        <Button 
            Width="60"
            Height="40"
            VerticalAlignment="Bottom"
            Click="checkDotVals"/>
    </Grid>
    
</UserControl>
